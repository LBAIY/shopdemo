/**index.wxss**/
.container{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.bg{
  width:100%;
  height:20rpx;
  background: #ededed;
}

.search {
  height: 88rpx;
  width: 100%;
  padding: 0 30rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search .input {
  width: 690rpx;
  height: 56rpx;
  background: #ededed;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.search .icon {
  background: url(http://yanxuan.nosdn.127.net/hxm/yanxuan-wap/p/20161201/style/img/icon-normal/search2-2fb94833aa.png) center no-repeat;
  background-size: 100%;
  width: 28rpx;
  height: 28rpx;
}

.search .txt {
  height: 42rpx;
  line-height: 42rpx;
  color: #666;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.banner {
  width: 750rpx;
  height: 250rpx;
}

.banner image {
  width: 100%;
  height: 250rpx;
}

.list{
  padding: 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.list-item{
  box-sizing: border-box;
  width: 48.6%;
  padding: 50rpx 30rpx 40rpx;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0.7%;
}

.title{
  max-width: 280rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 10rpx 0 20rpx;
  color: #666;
}

.img{
  width: 100%;
  height: 215rpx;
  display: block;
}

.footer{
  width: 100%;
  align-self: flex-start;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.sn{
  color: red;
}

.add{
  color: coral;
  display: flex;
  align-items: center;
}

.icon{
  width: 45rpx;
  height: 45rpx;
}

.scroll_view{
  white-space: nowrap;
  background: #fff;
  margin-top: 20rpx;
}
.tab{
  width: 750rpx;
}
.scroll_item{
  display: inline-block;
  width: 111rpx;
  padding: 20rpx 0;
  margin: 0 38rpx;
  text-align: center;
}
.scroll_img{
  width: 90rpx;
  height: 90rpx;
}
.scroll_text{
  color: darkslategray;
}