/* miniprogram/pages/detail/detail.wxss */

.header{
  text-align: center;
  background: #fff;
}
.main{
  padding: 40rpx;
  background: #fff;
}
.main_title{
  font-size: 36rpx;
  color: #000000;
}
.main_sub, .footer_item{
  font-size: 30rpx;
  color: #999999;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.main_content{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding-right: 10rpx;
}
.main_text{
  font-size: 30rpx;
  color: #F0422C;
  margin-top: 20rpx;
}
.main_img{
  width: 40rpx;
  height: 40rpx;
}
.main_add{
  font-size: 28rpx;
  color: #4288E9;
  background: rgba(66,136,233,0.10);
  border-radius: 22rpx;
  padding: 4rpx 20rpx;
}
.footer{
  padding: 40rpx;
  margin-top: 20rpx;
  background: #fff;
}
.footer_content{
  color: #000000;
}
.title{
  font-size: 40rpx;
}
.footer_item{
  line-height: 1.8;
}
.footer_text{
  font-size: 28rpx;
  color: #999999;
  margin: 10rpx 0;
}